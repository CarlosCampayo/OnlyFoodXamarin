<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlyFoodXamarin.Views.RegisterView" 
             xmlns:local="clr-namespace:OnlyFoodXamarin"
             BindingContext="{Binding Source={x:Static local:App.ServiceLocator},Path=RegisterViewModel}">

    <NavigationPage.TitleView>
        <Label Text="Registro" TextColor="White"
                FontSize="20"
                FontAttributes="Bold"/>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
            <ScrollView>
                <StackLayout Orientation="Vertical" Padding="10, 15">
                    <Label Text="Nombre de usuario"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                            HorizontalOptions="StartAndExpand"/>
                <Frame CornerRadius="20">
                    <Entry Text="{Binding Usuario.UserName}"
                            HorizontalOptions="FillAndExpand"/>
                </Frame>
                <Label Text="Email"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="StartAndExpand"/>
                <Frame CornerRadius="20">
                    <Entry Text="{Binding Usuario.Email}"
                           Keyboard="Email"
                           HorizontalOptions="FillAndExpand"/>
                </Frame>
                <Label Text="Contraseña"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="StartAndExpand"/>
                <Frame CornerRadius="20">
                    <Entry Text="{Binding Usuario.Password}"
                           IsPassword="True"
                           HorizontalOptions="FillAndExpand"/>
                </Frame>
                <Label Text="Nombre"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="StartAndExpand"/>
                <Frame CornerRadius="20">
                    <Entry Text="{Binding Usuario.Nombre}"
                           HorizontalOptions="FillAndExpand"/>
                </Frame>
                <Label Text="Apellidos"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="StartAndExpand"/>
                <Frame CornerRadius="20">
                    <Entry Text="{Binding Usuario.Apellidos}"
                           HorizontalOptions="FillAndExpand"/>
                </Frame>
                <Label Text="Fecha de nacimiento"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="StartAndExpand"/>
                    <DatePicker Date="{Binding Usuario.FechaNacimiento}"
                           HorizontalOptions="FillAndExpand"/>
                    
                    <Button Text="Registrarse"
                            Command="{Binding Registrar}"
                            CornerRadius="20"
                            BorderWidth="1"
                            BorderColor="White"
                            BackgroundColor="#e41b13"
                            TextColor="White"/>
                </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>